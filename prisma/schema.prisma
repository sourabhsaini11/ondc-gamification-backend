generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrderData {
  id                Int      @id @default(autoincrement())
  uid               String   @default("")
  name              String
  orderId           String   @default("")
  orderStatus       String   @default("Pending")
  timestampCreated  DateTime @default(now())  // Change to DateTime
  timestampUpdated  DateTime @default(now())  // Change to DateTime
  category          String   @default("")
  buyerAppId        String   @default("")
  basePrice         String   @default("0")
  shippingCharges   String   @default("0")
  taxes             String   @default("0")
  discount          String   @default("0")
  convenienceFee    String   @default("0")
  sellerId          String   @default("")
  streakcount       String   @default("0")
  gameId            String   @default("")
  points            String   @default("0")
  streakMaintain    String   @default("")
  highestGmvForDay  String   @default("")
  highestOrdersForDay  String   @default("")
  gmv               String   @default("")
}


model Leaderboard {
  id            Int     @id @default(autoincrement())
  uid           String  @unique
  name          String
  basePoints    Int
  gmvPoints     Int
  highValueBonus Int
  totalPoints   Int
  streak        Int
  streak_maintain Boolean
  last_streak_date DateTime
  updatedAt     DateTime @updatedAt
}

